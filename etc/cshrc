# ------------------------------------------------------------------------------
# Tcsh features
# ------------------------------------------------------------------------------

# Bomb out if not an interactive shell
if (!($?prompt) || !($?term)) exit 0

set   filec
set   autolist
set   history=50
set   savehist=50
set   norebind
set   matchbeep=nomatch
set   rmstar
unset autologout
unset ignoreeof
limit coredumpsize 0
umask 027

set prompt = "%n@%m $ "

# ------------------------------------------------------------------------------
# Common alias interface 
# ------------------------------------------------------------------------------

alias a 'alias'

# ------------------------------------------------------------------------------
# Load Sama-sama tools 
# ------------------------------------------------------------------------------

setenv PATH $PATH":$SAMA_SAMA_PATH/bin"

# ------------------------------------------------------------------------------
# End of file
# ------------------------------------------------------------------------------

